@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Current

@using (Html.BeginForm("CariBilgiGuncelle", "CurrentPanel", FormMethod.Post))
{
    <form class="form-horizontal">

        @Html.HiddenFor(x => x.CurrentID)
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Surname</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentSurname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">E-mail Address</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentMail, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> I want to change my password
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Update</button>
            </div>
        </div>
    </form>
}