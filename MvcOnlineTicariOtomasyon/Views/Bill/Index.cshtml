@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Bills>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>

        <th>Serial Number</th>
        <th>Date and Hour</th>
        <th>Total</th>
        <th>Submitter</th>
        <th>Receiver</th>
        <th>Tax Administration</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>            
            <td>@k.BillSerialNumber @k.BillSıraNumber</td>         
            <td>@k.BillDate @k.BillHour</td>
            <td>@k.Total</td>
            <td>@k.BillSubmitter</td>
            <td>@k.BillReceiver</td>
            <td>@k.BillTaxAdministration</td>
            <td>
                <a href="/Bill/BillBring/@k.BillID" class=" btn btn-danger">Update</a>
            </td>
            <td>
                <a href="/Bill/BillDetail/@k.BillID" class=" btn btn-warning">Details</a>
            </td>

        </tr>
    }
</table>
<br />
<a href="/Bill/BillAdd/" class="btn btn-info">New Bill Entry</a>

