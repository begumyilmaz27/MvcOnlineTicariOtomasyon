@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Sınıflar.Class3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Product Brand Tables</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Brand</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Total</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>

                        <td>@{sirano++;} @sirano</td>
                        <td>@x.brand</td>
                        <td>
                            @if (x.number >= 1 && x.number <= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.number >= 4 && x.number <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.number >= 7)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.number >= 1 && x.number <= 3)
                            {
                                <span class="badge bg-danger">@x.number</span>
                            }
                            @if (x.number >= 4 && x.number <= 6)
                            {
                                <span class="badge bg-warning">@x.number</span>
                            }
                            @if (x.number >= 7)
                            {
                                <span class="badge bg-success">@x.number</span>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
