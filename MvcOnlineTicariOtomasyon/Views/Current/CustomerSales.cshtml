@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SalesMovement>
@{
    ViewBag.Title = "CustomerSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Current's Name:@ViewBag.current</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Sales ID</th>
        <th>Product</th>
        <th>Current</th>
        <th>Price</th>
        <th>Piece</th>
        <th>Total Amount</th>
        <th>Date</th>
        <th>Print</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.SalesMovement_SalesID</td>
            <td>@u.Products.ProductName</td>
            <td>@u.Employees.EmployeeName @u.Employees.EmployeeSurname</td>
            <td>@u.SalesMovement_Price</td>
            <td>@u.SalesMovement_Piece</td>
            <td>@u.SalesMovement_TotalAmount</td>
            <td>@u.SalesMovement_Date</td>
            <td>
                <a href="#" class="btn btn-danger" style="background-color:deepskyblue">Print</a>
            </td>
        </tr>
    }
</table>

