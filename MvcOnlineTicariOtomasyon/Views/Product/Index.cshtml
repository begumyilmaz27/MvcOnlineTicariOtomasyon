@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
            {
                <p>
                    Product Name: @Html.TextBox("p")
                    <input type="submit" value="Search" />
                </p>

            }
<br />
<table class="table table-bordered">
    <tr>        
        <th>Product</th>
        <th>Brand</th>
        <th>Stock</th>
        <th>Purchase Price</th>
        <th>Sale Price</th>
        <th>Category</th>
        <th>Delete</th>
        <th>Update</th>
        <th>MakeaSale</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.ProductName</td>
            <td>@u.ProductBrand</td>
            <td>@u.ProductStock</td>
            <td>@u.ProductPurchasePrice ₺</td>
            <td>@u.ProductSalePrice ₺</td>
            <td>@u.Category.CategoryID</td>
            <td>
                <a href="/Product/ProductDelete/@u.ProductID" class=" btn btn-danger">Delete</a>
            </td>
            <td>
                <a href="/Product/ProductBring/@u.ProductID" class=" btn btn-warning">Update</a>
            </td>
            <td>
                <a href="/Product/MakeaSale/@u.ProductID" class=" btn btn-warning" style="background-color:coral">MakeaSale</a>
            </td>

        </tr>
    }
</table>
<br />
<a href="/Product/NewProduct/" class="btn btn-info">New Product</a>