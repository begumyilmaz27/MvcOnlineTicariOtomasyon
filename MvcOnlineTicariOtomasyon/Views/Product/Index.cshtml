@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Product</th>
        <th>Brand</th>
        <th>Stock</th>
        <th>Purchase Price</th>
        <th>Sale Price</th>
        <th>Image</th>
        <th>Category</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.ProductID</td>
            <td>@u.ProductName</td>
            <td>@u.ProductBrand</td>
            <td>@u.ProductStock</td>
            <td>@u.ProductPurchasePrice</td>
            <td>@u.ProductSalePrice</td>
            <td>@u.ProductImage</td>
            <td>@u.Category.CategoryID</td>
            <td>
                <a href="/Product/ProductDelete/@u.ProductID" class=" btn btn-danger">Delete</a>
            </td>
            <td>
                <a href="/Product/ProductBring/@u.ProductID" class=" btn btn-warning">Update</a>
            </td>
            
        </tr>
    }
</table>
<br />
<a href="/Product/NewProduct/" class="btn btn-info">New Product</a>